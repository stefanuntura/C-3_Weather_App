        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Canvas.ZIndex="1" x:Name="ThreeHumidity" Margin="69,204,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="59" FontSize="25" FontFamily="Calibri" FontWeight="Bold" Width="181" Text="Test" RenderTransformOrigin="0.5,0.5" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Canvas.ZIndex="1" x:Name="FourHumidity" Margin="70,204,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="59" FontSize="25" FontFamily="Calibri" FontWeight="Bold" Width="181" Text="Test" RenderTransformOrigin="0.5,0.5" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Canvas.ZIndex="1" x:Name="FiveHumidity" Margin="71,204,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="59" FontSize="25" FontFamily="Calibri" FontWeight="Bold" Width="181" Text="Test" RenderTransformOrigin="0.5,0.5" Grid.Row="2" Grid.Column="4" Grid.RowSpan="2">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- Weather images-->
        <Image HorizontalAlignment="Center" x:Name="OneImage" Height="100" Margin="0,25,0,0" Grid.Row="4" VerticalAlignment="Top" Width="100"/>
        <Image HorizontalAlignment="Center" x:Name="TwoImage" Height="100" Margin="0,25,0,0" Grid.Row="4" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <Image HorizontalAlignment="Center" x:Name="ThreeImage" Height="100" Margin="0,25,0,0" Grid.Row="4" VerticalAlignment="Top" Width="100" Grid.Column="2"/>
        <Image HorizontalAlignment="Center" x:Name="FourImage" Height="100" Margin="0,25,0,0" Grid.Row="4" VerticalAlignment="Top" Width="100" Grid.Column="3"/>
        <Image HorizontalAlignment="Center" x:Name="FiveImage" Height="100" Margin="0,25,0,0" Grid.Row="4" VerticalAlignment="Top" Width="100" Grid.Column="4"/>


        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="167*" />
            <RowDefinition Height="167*" />
            <RowDefinition Height="181*" />
            <RowDefinition Height="152*" />
            <RowDefinition Height="167*" />
            <RowDefinition Height="166*" />
        </Grid.RowDefinitions>

    </Grid>
</Page>
