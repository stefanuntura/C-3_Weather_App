        </TextBlock>

        <!-- Feels like temp TextBlocks -->
        <TextBlock HorizontalAlignment="Left" Canvas.ZIndex="1" x:Name="OneFeelsLike" Margin="55,68,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="59" FontSize="25" FontFamily="Calibri" FontWeight="Bold" Width="181" Text="Test" RenderTransformOrigin="0.5,0.5" Grid.Row="2">
