        <TextBlock HorizontalAlignment="Center" Canvas.ZIndex="1" x:Name="TwoHumidity" Margin="0,204,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="59" FontSize="25" FontFamily="Calibri" FontWeight="Bold" Width="181" Text="Test" RenderTransformOrigin="0.5,0.5" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="0"/>
