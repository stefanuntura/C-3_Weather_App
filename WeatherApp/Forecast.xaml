            RadiusY="50" Margin="10,58,10,10" Grid.RowSpan="4" Grid.Row="1" />
        <Rectangle Grid.Column="4" Canvas.ZIndex="0"  Fill="LightGray" RadiusX="30"
            RadiusY="50" Margin="10,58,10,10" Grid.RowSpan="4" Grid.Row="1" />

        <!-- Description TextBlocks -->
        <TextBlock HorizontalAlignment="Left" Canvas.ZIndex="1" x:Name="OneDesc" Margin="55,0,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Height="59" FontSize="25" FontFamily="Calibri" FontWeight="Bold" Width="181" Text="Test" RenderTransformOrigin="0.5,0.5" Grid.Row="2">
